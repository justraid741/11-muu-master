<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".porcon.porvisa.PorSag.PorSag">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/pagetool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/norway"

        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/pagetab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/colorWhite"
            >

            <com.google.android.material.tabs.TabItem
                android:id="@+id/page1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Genel Bilgi" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/page2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gerekli Evraklar" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/page3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Önemli Uyarılar" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/page4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Başvuru Formu" />

        </com.google.android.material.tabs.TabLayout>


    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pageview"
        >

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>