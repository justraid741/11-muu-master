<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".huncon.hunvisa.HunD.dhun2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/macar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="MACARİSTAN SCHENGEN VİZESİ"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            />
    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="D TİPİ BAŞVURULARI İÇİN :"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />


    <TextView
        android:id="@+id/text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="İSTANBUL'DAN YAPILACAK BAŞVURULAR İÇİN İKAMET SINIRI YOKTUR, TÜRKİYE'NİN HERHANGİ BİR YERİNDE İKAMET EDENLER İSTANBUL'DAN D TİPİ VİZE BAŞVURUSU YAPABİLİRLER."
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="13sp"
        app:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />
    <TextView
        android:id="@+id/text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Üçüncü bir kişi için başvuru yapılamamaktadır
"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text3" />
    <TextView
        android:id="@+id/text4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Pasaportu sadece başvuru sahibi teslim alabilir ya da kurye ile gönderilebilir.3'üncü şahıslar ve ebeveynler teslim alamaz. İstanbul için elden teslim edilmez, kurye zorunludur."
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="13sp"
        app:fontFamily="sans-serif-light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Başvuru evrakları arkalı-önlü olmamalı, tek taraflı olmalıdır. Apostilli, noter onaylı, ve benzeri çift taraflı evrakların fotokopileri başvuru merkezimizden çekilebilmektedir."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="13sp"
            app:fontFamily="sans-serif-light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text4" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>